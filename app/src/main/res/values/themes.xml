<resources>
    <!-- Base application theme. -->
    <style name="Theme.FahrradverleihAndroid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_primary</item>
        <item name="colorSecondaryVariant">@color/brand_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/white</item>

        <!-- Entfernt die Standard ActionBat in Activities -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style für die Fullscreen-Dialoge -->
    <style name="Theme.FahrradverleihAndroid.FullscreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Basis-Theme für die StartupActivity mit dunklem Hintergrund (Bild) -->
    <style name="Theme.FahrradverleihAndroid.StartupBase" parent="Theme.FahrradverleihAndroid">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#AFFF</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#AFFF</item>
        <item name="android:statusBarColor">#65a8ca</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <!-- Buttons mit weißem Outline für die StartupActivity -->
    <style name="Theme.FahrradverleihAndroid.StartupButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">#3FFF</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.FahrradverleihAndroid.StartupInput" parent="Widget.Design.TextInputLayout">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Buttons mit Outline in der primären Farbe -->
    <style name="Theme.FahrradverleihAndroid.PrimaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/brand_primary_translucent</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Buttons mit rotem Outline -->
    <style name="Theme.FahrradverleihAndroid.DangerButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/danger</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">#FFA3A3</item>
        <item name="strokeColor">@color/danger</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>