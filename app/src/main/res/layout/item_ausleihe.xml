<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:contentDescription="@string/item_ausleihe_icon_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/bike_ebike"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="E-Bike"
        />

    <TextView
        android:id="@+id/tarif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        tools:text="Tarif: EUR 4 für 3 Stunden"
        />

    <TextView
        android:id="@+id/id_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tarif"
        app:layout_constraintStart_toStartOf="@id/tarif"
        app:layout_constraintEnd_toEndOf="@id/tarif"
        tools:text="ID: R0002"
        />

    <TextView
        android:id="@+id/rueckgabe_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_info"
        app:layout_constraintStart_toStartOf="@id/id_info"
        app:layout_constraintEnd_toEndOf="@id/id_info"
        tools:text="Zurückgegeben am 21.09.2022"
        />

    <Button
        android:id="@+id/rueckgabe_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/item_ausleihe_return_button"
        app:layout_constraintTop_toBottomOf="@id/rueckgabe_info"
        app:layout_constraintStart_toStartOf="@id/rueckgabe_info"
        app:layout_constraintEnd_toEndOf="@id/rueckgabe_info"
        />

</androidx.constraintlayout.widget.ConstraintLayout>